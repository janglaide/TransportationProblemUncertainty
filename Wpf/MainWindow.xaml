<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" x:Class="Wpf.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="22"
        WindowStartupLocation="CenterScreen">
    <Grid Loaded="Loaded_MainWindow">
        <Label Content="Transportation problem under uncertainty solver and analysis" HorizontalAlignment="Left" Margin="82,42,0,0" VerticalAlignment="Top" Height="71" Width="672"/>
        <Button x:Name="SolverButton" Content="Solver" HorizontalAlignment="Left" Margin="82,0,0,0" VerticalAlignment="Center" Height="51" Width="225" Click="SolverButton_Click"/>
        <Button x:Name="AnalysisButton" Content="Analysis" HorizontalAlignment="Left" Margin="474,0,0,0" VerticalAlignment="Center" Height="51" Width="236" Click="AnalysisButton_Click"/>

    </Grid>
</Window>
