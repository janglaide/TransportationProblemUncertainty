<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf"
        xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" x:Class="Wpf.ExperimentResultWindow"
        mc:Ignorable="d"
        Title="ExperimentResultWindow" Height="572" Width="1004" Loaded="ExperimentResult_Loaded"
        WindowStartupLocation="CenterScreen" SizeChanged="Window_SizeChanged">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="787*"/>
        </Grid.ColumnDefinitions>

        <Wpf:CartesianChart Name="chart" Grid.Column="1" HorizontalAlignment="Center" Height="470" VerticalAlignment="Center" Width="968"/>
        <Button Name="SaveDataButton" Content="Save data" FontSize="18" Grid.Column="1" HorizontalAlignment="Left" Margin="84,513,0,0" VerticalAlignment="Top" Width="152" Height="28" Click="SaveDataButton_Click"/>
        <Button Name="SaveGraphButton" Content="Save graph" FontSize="18" Grid.Column="1" HorizontalAlignment="Left" Margin="750,513,0,0" VerticalAlignment="Top" Height="28" Width="152" Click="SaveGraphButton_Click"/>

    </Grid>
</Window>
